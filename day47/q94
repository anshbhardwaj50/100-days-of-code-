Q94: Find the longest word in a sentence.

/*
Sample Test Cases:
Input 1:
I love programming
Output 1:
programming

*/

sorce code:
#include <stdio.h>
#include <string.h>

int main() {
    char str[300];
    fgets(str, sizeof(str), stdin);   // read full sentence

    char word[100], longest[100];
    int i = 0, j = 0, maxLen = 0;

    while (1) {
        if (str[i] == ' ' || str[i] == '\0' || str[i] == '\n') {
            word[j] = '\0';  // complete the current word

            int len = strlen(word);
            if (len > maxLen) {
                maxLen = len;
                strcpy(longest, word);
            }

            j = 0; // reset for next word
            if (str[i] == '\0')
                break;
        }
        else {
            word[j++] = str[i];
        }
        i++;
    }

    printf("%s", longest);

    return 0;
}
